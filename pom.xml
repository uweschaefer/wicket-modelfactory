				<role>Comitter</role>
			</roles>
		</developer>
	</developers>
	<distributionManagement>
		<site>
			<id>wicket-modelfactory</id>
			<url>scp://wicketeer@codesmell.de/home/wicketeer/www.wicketeer.org/wicket-modelfactory</url>
		</site>
		<repository>
			<id>wicketeer.org</id>
			<url>scp://wicketeer@codesmell.de/home/wicketeer/www.wicketeer.org/maven/release</url>
			<layout>default</layout>
		</repository>
		<snapshotRepository>
			<id>wicketeer.org-SNAPSHOT</id>
			<url>scp://wicketeer@codesmell.de/home/wicketeer/www.wicketeer.org/maven/snapshot</url>
			<layout>default</layout>
		</snapshotRepository>
	</distributionManagement>
	<build>
		<plugins>
